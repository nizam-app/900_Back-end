      "name": "Authentication",
      "item": [
        {
          "name": "Send OTP for Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"9999999999\",\n  \"type\": \"LOGIN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/otp/send",
              "host": ["{{base_url}}"],
              "path": ["otp", "send"]
            }
          }
        },
        {
          "name": "Login with OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
